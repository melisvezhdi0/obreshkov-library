@model IEnumerable<ObreshkovLibrary.Models.BookTitle>

@{
    ViewData["Title"] = "Книги";
}

<h2>Книги</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добави книга</a>
</p>

<table class="table align-middle">
    <thead>
        <tr>
            <th>Корица</th>
            <th>Заглавие</th>
            <th>Автор</th>
            <th>Категории</th>
            <th>Налични копия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td style="width:90px;">
                    @if (!string.IsNullOrWhiteSpace(b.CoverUrl))
                    {
                        <img src="@b.CoverUrl" style="max-height:80px;" />
                    }
                    else
                    {
                        <span class="text-muted">—</span>
                    }
                </td>
                <td>
                    <strong>@b.Title</strong><br />
                    <small class="text-muted">@b.Year</small>
                </td>
                <td>@b.Author</td>
                <td>
                    @foreach (var bc in b.BookTitleCategories)
                    {
                        <span class="badge bg-secondary me-1">@bc.Category.Name</span>
                    }
                </td>
                <td>
                    @{
                        var available = b.BookCopies.Count(c => c.IsActive);
                    }
                    @available
                </td>
            </tr>
        }
    </tbody>
</table>
