@model ObreshkovLibrary.Models.ViewModels.HomeDashboardVM

@{
    ViewData["Title"] = "Начало";
}

<h2>Админ панел</h2>

<form asp-action="SearchByCardNumber" method="post" class="mb-3">
    @Html.AntiForgeryToken()

    <div class="input-group" style="max-width: 420px;">
        <input name="cardNumber" value="@Model.CardNumber" class="form-control" placeholder="Номер на карта (само цифри)" />
        <button class="btn btn-primary" type="submit">Търси</button>
    </div>
</form>

@if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

@if (Model.Client != null)
{
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">
                @($"{Model.Client.FirstName} {Model.Client.MiddleName} {Model.Client.LastName}".Replace("  ", " ").Trim())
            </h5>

            <div class="mb-2">
                <strong>Клас:</strong> @Model.Client.Grade@Model.Client.Section
                <span class="ms-3"><strong>№ карта:</strong> @Model.Client.CardNumber</span>
            </div>

            @if (Model.ActiveLoans.Any())
            {
                <div class="alert alert-warning mb-2">
                    Има @Model.ActiveLoans.Count книга/книги за връщане.
                </div>
            }
            else
            {
                <div class="alert alert-success mb-2">
                    Няма книги за връщане.
                </div>
            }

            <a class="btn btn-success"
               asp-controller="Loans"
               asp-action="Create"
               asp-route-clientId="@Model.Client.Id">
                Заеми книга
            </a>
        </div>
    </div>

    <h4>Активни заеми</h4>

    @if (!Model.ActiveLoans.Any())
    {
        <p>Няма активни заеми.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Книга</th>
                    <th>Автор</th>
                    <th>Дата на заемане</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var loan in Model.ActiveLoans)
                {
                    <tr>
                        <td>@loan.BookCopy.BookTitle.Title</td>
                        <td>@loan.BookCopy.BookTitle.Author</td>
                        <td>@loan.LoanDate.ToString("dd.MM.yyyy")</td>
                        <td>
                            <a asp-controller="Loans"
                               asp-action="Return"
                               asp-route-id="@loan.Id">
                                Върни
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}
