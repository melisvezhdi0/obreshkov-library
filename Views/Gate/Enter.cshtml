@{
    ViewData["Title"] = "Админ достъп";
}

<div style="max-width:420px;margin:40px auto;background:#fff;padding:18px;border-radius:16px;
            box-shadow:0 10px 25px rgba(0,0,0,.08);border:1px solid rgba(0,0,0,.06);">
    <h2 style="color:#0F766E;font-weight:900;margin-bottom:12px;">Парола за промени</h2>

    <div style="color:#64748B;font-weight:700;margin-bottom:12px;">
        Нужно е да въведеш парола само при добавяне, редакция, изтриване или деактивиране.
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="text-danger" style="font-weight:800;margin-bottom:10px;">@ViewBag.Error</div>
    }

    <form method="post">
        @Html.AntiForgeryToken()
        <input type="password" name="password" class="form-control" placeholder="Парола" />
        <button class="btn mt-3"
                style="background:#0F766E;color:#fff;font-weight:900;border-radius:12px;">
            Потвърди
        </button>
    </form>
</div>