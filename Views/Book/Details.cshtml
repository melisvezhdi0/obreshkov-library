@model ObreshkovLibrary.Models.Book

@{
    ViewData["Title"] = "Детайли за книга";
}

<div class="card-soft card-books p-4">

    <h2 class="section-title mb-1">@Model.Title</h2>
    <div class="accent-line mb-4"></div>

    <div class="book-detail-grid">

        <div class="book-cover-box">
            <img src="@Model.CoverUrl"
                 alt="@Model.Title"
                 onerror="this.style.display='none';" />
        </div>

        <div class="book-meta">
            <div class="meta-title">@Model.Title</div>

            @if (!string.IsNullOrEmpty(Model.Author))
            {
                <div class="meta-row">
                    <span class="meta-label">Автор:</span> @Model.Author
                </div>
            }

            @if (Model.Category != null)
            {
                <div class="meta-row">
                    <span class="meta-label">Жанр:</span>
                    <span class="book-chip">@Model.Category.Name</span>
                </div>
            }

            @if (Model.Year.HasValue)
            {
                <div class="meta-row">
                    <span class="meta-label">Година:</span> @Model.Year
                </div>
            }

            <div class="book-divider"></div>

            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="meta-row mb-2">
                    <span class="meta-label">Описание:</span>
                </div>
                <div class="book-desc">@Model.Description</div>
            }

            <div class="book-actions mt-4">
                <a asp-controller="Book"
                   asp-action="Edit"
                   asp-route-id="@Model.Id"
                   class="btn btn-accent me-2">
                    Редактирай
                </a>

                <a asp-controller="Home"
                   asp-action="Index"
                   class="btn btn-outline-secondary">
                    Назад
                </a>
            </div>
        </div>

    </div>
</div>