@using ObreshkovLibrary.Models
@model ObreshkovLibrary.Models.Client

@{
    ViewData["Title"] = "Читател";
    var loans = ViewBag.ActiveLoans as List<Loan> ?? new List<Loan>();
}

<div class="d-flex align-items-end justify-content-between flex-wrap gap-2 mb-3">
    <div>
        <h2 class="section-title mb-1">
            @($"{Model.FirstName} {Model.MiddleName} {Model.LastName}".Replace("  ", " ").Trim())
        </h2>
        <div class="accent-line"></div>
    </div>

    <div class="d-flex gap-2">
        <a class="btn btn-outline-secondary"
           asp-action="Index">Назад</a>

        <a class="btn btn-accent"
           asp-controller="Loans"
           asp-action="Create"
           asp-route-clientId="@Model.Id">
            Нов заем
        </a>
    </div>
</div>

<div class="row g-3">
    <div class="col-lg-5">
        <div class="card-soft p-3">
            <h5 class="section-title mb-3">Данни</h5>

            <div class="mb-2"><strong>№ карта:</strong> @Model.CardNumber</div>
            <div class="mb-2"><strong>Име:</strong> @Model.FirstName</div>
            <div class="mb-2"><strong>Фамилия:</strong> @Model.LastName</div>

            @if (!string.IsNullOrWhiteSpace(Model.PhoneNumber))
            {
                <div class="mb-2"><strong>Телефон:</strong> @Model.PhoneNumber</div>
            }

            <div class="mb-2"><strong>Създаден:</strong> @Model.CreatedOn.ToString("dd.MM.yyyy")</div>
            <div class="mb-2"><strong>Активен:</strong> @(Model.IsActive ? "Да" : "Не")</div>

            <div class="mt-3">
                <a class="btn btn-outline-primary"
                   asp-action="Edit"
                   asp-route-id="@Model.Id">
                    Редактиране
                </a>
            </div>
        </div>
    </div>

    <div class="col-lg-7">
        <div class="card-soft p-3">
            <div class="d-flex align-items-center justify-content-between mb-2">
                <h5 class="section-title mb-0">Активни заеми</h5>
                <span class="badge badge-accent">@loans.Count</span>
            </div>

            @if (!loans.Any())
            {
                <div class="alert alert-success mb-0">Няма активни заеми.</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table align-middle mb-0">
                        <thead>
                            <tr>
                                <th>Книга</th>
                                <th>Автор</th>
                                <th>Заета на</th>
                                <th>Срок</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var l in loans)
                            {
                                <tr>
                                    <td>@l.BookCopy?.Book?.Title</td>
                                    <td>@l.BookCopy?.Book?.Author</td>
                                    <td>@l.LoanDate.ToString("dd.MM.yyyy")</td>
                                    <td>@l.DueDate.ToString("dd.MM.yyyy")</td>
                                    <td class="text-end">
                                        <a class="btn btn-sm btn-outline-danger"
                                           asp-controller="Loans"
                                           asp-action="Return"
                                           asp-route-id="@l.Id">
                                            Върни
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>